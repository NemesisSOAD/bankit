<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="bankit">
	<display-name>BankIt Web Application</display-name>

	<!-- Spring MVC context loader -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<!-- Spring config files -->
		<param-value>
			/WEB-INF/bankit-context.xml
		</param-value>
	</context-param>

	<!-- Servlet Spring MVC -->
	<servlet>
		<servlet-name>bankit</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>bankit</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- Layout -->
	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- JDBC -->
	<resource-ref>
		<res-ref-name>jdbc/bankit</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<!-- Is application is running in standalone mode -->
	<resource-env-ref>
		<resource-env-ref-name>standalone</resource-env-ref-name>
		<resource-env-ref-type>java.lang.Boolean</resource-env-ref-type>
	</resource-env-ref>

</web-app>